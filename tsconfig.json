{
    "compilerOptions": {
        "rootDirs": [
            "src/"
        ],
        "outDir": "dist/",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": ["src/**/*", "types"],
    "exclude": [
        "node_modules",
        "types/**"
    ]
}